<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>Liste des Clients</title>
</head>
<body class="bg-white">

<div class="flex h-screen">
    <!-- Sidebar -->
    <div class="w-64 bg-blue-500 text-gray-800 border-r border-blue-200">
        <div class="p-4 border-b border-blue-200">
            <h1 class="text-2xl font-bold text-black text-center">Gestion Dettes</h1>
        </div>
        <ul class="mt-4">
            <!-- Dashboard -->
            <li class="hover:bg-blue-200 p-3 rounded-lg transition duration-200">
                <a href="#" class="flex items-center space-x-2">
                    <span>üìä</span>
                    <span>Dashboard</span>
                </a>
            </li>
            <!-- Dettes -->
            <li class="hover:bg-blue-200 p-3 rounded-lg transition duration-200 mt-2">
                <a href="{{path('dette.index')}}" class="flex items-center space-x-2">
                    <span>üí∞</span>
                    <span>Dettes</span>
                </a>
            </li>
            <!-- Clients -->
            <li class="hover:bg-blue-200 p-3 rounded-lg transition duration-200 mt-2">
                <a href="{{path('client.index')}}" class="flex items-center space-x-2">
                    <span>üë•</span>
                    <span>Clients</span>
                </a>
            </li>
            <!-- Articles -->
            <li class="hover:bg-blue-200 p-3 rounded-lg transition duration-200 mt-2">
                <a href="{{path('article.index')}}" class="flex items-center space-x-2">
                    <span>üõí</span>
                    <span>Articles</span>
                </a>
            </li>
            <!-- Demandes -->
            <li class="hover:bg-blue-200 p-3 rounded-lg transition duration-200 mt-2">
                <a href="#" class="flex items-center space-x-2">
                    <span>üìù</span>
                    <span>Demandes</span>
                </a>
            </li>
            <!-- Utilisateurs -->
            <li class="hover:bg-blue-200 p-3 rounded-lg transition duration-200 mt-2">
                <a href="#" class="flex items-center space-x-2">
                    <span>üîë</span>
                    <span>Utilisateurs</span>
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content (Table) -->
    <div class="flex-1 p-6">
        <h1 class="text-4xl font-extrabold text-black text-center mb-8 underline tracking-wide">
            Liste des Clients
        </h1>
        <div class="flex justify-between items-center mb-4">
            <div class="flex items-center space-x-2">
                <form method="get" action="{{ path('client.searchClientByTel') }}" class="flex items-center space-x-2">
                    <!-- Search input -->
                    <input type="text" name="searchPhone" value="{{ searchPhone ?? '' }}" placeholder="Rechercher par t√©l√©phone" 
                        class="w-2/3 p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    
                    <!-- OK button -->
                    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow">
                        OK
                    </button>
                </form>
            </div>
            <!-- Add button -->
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow">
                <a href="{{path('client.store')}}">Ajouter</a>
            </button>
        </div>
        <div class="overflow-x-auto rounded-lg shadow">
            <table class="min-w-full bg-white border border-gray-200">
                <thead class="bg-blue-500 border-b border-gray-200">
                    <tr>
                        <th class="py-3 px-6 text-left text-black uppercase tracking-wider">Nom</th>
                        <th class="py-3 px-6 text-left text-black uppercase tracking-wider">Pr√©nom</th>
                        <th class="py-3 px-6 text-left text-black uppercase tracking-wider">T√©l√©phone</th>
                        <th class="py-3 px-6 text-left text-black uppercase tracking-wider">Adresse</th>
                        <th class="py-3 px-6 text-left text-black uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-black">
                {% for client in clients %}
                    <tr class="hover:bg-blue-300">
                        <td class="py-4 px-6 text-gray-800">{{ client.nom }}</td>
                        <td class="py-4 px-6 text-gray-800">{{ client.prenom }}</td>
                        <td class="py-4 px-6 text-gray-800">{{ client.telephone }}</td>
                        <td class="py-4 px-6 text-gray-800">{{ client.adresse }}</td>
                        <td class="py-4 px-6 text-gray-800">
                            <form action="{{ path('client.dettes', {id: client.id}) }}" method="post" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('dettes' ~ client.id) }}">
                                <button type="submit" class="bg-blue-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg shadow">Dettes</button>
                            </form>
                            <form action="{{ path('client.remove', {id: client.id}) }}" method="post" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce client ?');" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                                <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg shadow">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="py-2 px-4 text-center">Aucun client trouv√©.</td>
                    </tr>
                {% endfor %}
            </tbody>
            </table>

            <div class="mt-4 mb-4 flex justify-center space-x-2">
                {% if currentPage > 1 %}
                    <a href="{{ path('client.index', {'page': 1}) }}" class="bg-red-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg">Premi√®re</a>
                    <a href="{{ path('client.index', {'page': currentPage - 1}) }}" class="bg-red-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg">Pr√©c√©dent</a>
                {% endif %}

                {% for i in 1..totalPages %}
                    <a href="{{ path('client.index', {'page': i}) }}" class="bg-blue-{{ i == currentPage ? '700' : '500' }} hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg">
                        {{ i }}
                    </a>
                {% endfor %}

                {% if currentPage < totalPages %}
                    <a href="{{ path('client.index', {'page': currentPage + 1}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg">Suivant</a>
                    <a href="{{ path('client.index', {'page': totalPages}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg">Derni√®re</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="bg-gray-300 text-center py-4 mt-auto border-t border-gray-300">
    <p class="text-black">&copy; 2024 Mon Application. Tous droits r√©serv√©s.</p>
</footer>

</body>
</html>
